package problems1;

import static org.junit.Assert.assertFalse;
import static org.junit.Assert.assertTrue;

import org.junit.Before;
import org.junit.Test;

public class TestTasks6 {

    private Tasks6 tasks6;

    @Before
    public void setUp() throws Exception {
        tasks6 = new Tasks6();
    }

    @Ignore
    @Test
    public void testValidCasesShouldPass() {
        assertTrue(tasks6.validateStringWithBraces(""));
        assertTrue(tasks6.validateStringWithBraces("()"));
        assertTrue(tasks6.validateStringWithBraces("(()())"));
        assertTrue(tasks6.validateStringWithBraces("(())"));
        assertTrue(tasks6.validateStringWithBraces("(((()())))"));
    }

    @Ignore
    @Test
    public void testInvalidCasesShouldFail() {
        assertFalse(tasks6.validateStringWithBraces("("));
        assertFalse(tasks6.validateStringWithBraces(")"));
        assertFalse(tasks6.validateStringWithBraces("(()"));
        assertFalse(tasks6.validateStringWithBraces("())"));
        assertFalse(tasks6.validateStringWithBraces("(((()()))"));
        assertFalse(tasks6.validateStringWithBraces("(((()()))))"));
    }

}
